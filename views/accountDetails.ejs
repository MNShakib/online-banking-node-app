<!-- views/accountDetails.ejs -->
<h2 class="text-2xl font-semibold mb-4">Your Profile Details</h2>
<form action="/user/profile" method="POST" class="max-w-md space-y-4">
  <div>
    <label class="font-medium">Full Name:</label>
    <input type="text" name="name" value="<%= user.name %>" class="w-full border px-2 py-1" disabled>
  </div>
  <div>
    <label class="font-medium">Email:</label>
    <input type="email" name="email" value="<%= user.email %>" class="w-full border px-2 py-1">
  </div>
  <div>
    <label class="font-medium">Phone:</label>
    <input type="text" name="phone" value="<%= user.phone %>" class="w-full border px-2 py-1">
  </div>
  <div>
    <label class="font-medium">Address:</label>
    <textarea name="address" class="w-full border px-2 py-1"><%= user.address %></textarea>
  </div>
  <!-- Other fields like DOB, Aadhar can be displayed as read-only if needed -->
  <button type="submit" class="bg-blue-600 text-white px-4 py-2 rounded">Update Details</button>
</form>
