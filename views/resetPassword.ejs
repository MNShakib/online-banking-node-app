<!-- views/resetPassword.ejs -->
<div class="max-w-md mx-auto bg-white p-6 mt-8 rounded shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Reset Password</h2>
    <form action="/reset-password" method="POST" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">New Password</label>
        <input type="password" name="newPassword" required class="w-full border px-3 py-2" placeholder="Enter new password" />
      </div>
      <div>
        <label class="block font-medium mb-1">Confirm New Password</label>
        <input type="password" name="confirmPassword" required class="w-full border px-3 py-2" placeholder="Confirm new password" />
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Update Password</button>
    </form>
  </div>
  