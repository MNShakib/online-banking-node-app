<!-- views/layout.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Online Banking System</title>
  <!-- Tailwind CSS via CDN -->
  <script src="https://cdn.tailwindcss.com"></script>  <!-- Tailwind CSS CDN script :contentReference[oaicite:6]{index=6} -->
</head>
<body class="bg-gray-100">
  <!-- Navigation Bar -->
  <nav class="bg-blue-800 text-white p-4">
    <div class="max-w-7xl mx-auto flex justify-between">
      <a href="/" class="font-bold">OnlineBank</a>
      <div>
        <% if (session.userId) { %>
          <!-- If logged in, show appropriate nav links -->
          <% if (session.role === 'user') { %>
            <a href="/user/dashboard" class="mr-4 hover:underline">Dashboard</a>
            <a href="/user/transfer" class="mr-4 hover:underline">Transfer Funds</a>
            <a href="/user/profile" class="mr-4 hover:underline">Profile</a>
          <% } else if (session.role === 'admin') { %>
            <a href="/admin/dashboard" class="mr-4 hover:underline">Admin Panel</a>
          <% } %>
          <a href="/logout" class="hover:underline">Logout</a>
        <% } else { %>
          <!-- If not logged in -->
          <a href="/login" class="mr-4 hover:underline">Login</a>
          <a href="/register" class="mr-4 hover:underline">Register</a>
          <a href="/open-account" class="hover:underline">Open Account</a>
        <% } %>
      </div>
    </div>
  </nav>

  <!-- Flash Messages -->
  <% if (successMsg) { %>
    <div class="max-w-2xl mx-auto mt-4 p-2 bg-green-100 text-green-800 border border-green-300">
      <%= successMsg %>
    </div>
  <% } %>
  <% if (errorMsg) { %>
    <div class="max-w-2xl mx-auto mt-4 p-2 bg-red-100 text-red-800 border border-red-300">
      <%= errorMsg %>
    </div>
  <% } %>

  <!-- Main Content -->
  <main class="max-w-7xl mx-auto p-4">
    <%- body %>   <!-- where individual page content will be injected -->
  </main>

  <footer class="text-center text-sm text-gray-500 my-4">
    &copy; 2025 OnlineBank. All rights reserved.
  </footer>
</body>
</html>
