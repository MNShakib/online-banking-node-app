<!-- views/addPayee.ejs -->
<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Add New Payee</h2>
  <form action="/user/add-payee" method="POST" class="space-y-4">
    <div>
      <label class="block font-medium mb-1">Payee Name</label>
      <input type="text" name="name" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Account Number</label>
      <input type="text" name="accountNumber" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Nickname (optional)</label>
      <input type="text" name="nickname" class="w-full border px-3 py-2" />
    </div>
    <button type="submit" class="w-full bg-green-600 text-white py-2 rounded">Save Payee</button>
  </form>
</div>
