<!-- views/changePassword.ejs -->
<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Change Password</h2>
  <form action="/user/change-password" method="POST" class="space-y-4">
    <div>
      <label class="block font-medium mb-1">Current Password</label>
      <input type="password" name="currentPassword" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">New Password</label>
      <input type="password" name="newPassword" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Confirm New Password</label>
      <input type="password" name="confirmPassword" required class="w-full border px-3 py-2" />
    </div>
    <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded">Update Password</button>
  </form>
</div>
