<!-- views/register.ejs -->
<div class="max-w-md mx-auto bg-white p-6 rounded shadow-md">
  <h2 class="text-2xl font-semibold mb-4">Register for Internet Banking</h2>
  <form action="/register" method="POST" class="space-y-4">
    <div>
      <label class="block font-medium mb-1">Account Number</label>
      <input type="text" name="accountNumber" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Desired User ID</label>
      <input type="text" name="userId" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Login Password</label>
      <input type="password" name="password" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Confirm Login Password</label>
      <input type="password" name="confirmPassword" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Transaction Password</label>
      <input type="password" name="transactionPassword" required class="w-full border px-3 py-2" />
    </div>
    <div>
      <label class="block font-medium mb-1">Confirm Transaction Password</label>
      <input type="password" name="confirmTransPassword" required class="w-full border px-3 py-2" />
    </div>
    <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Register</button>
  </form>
</div>
