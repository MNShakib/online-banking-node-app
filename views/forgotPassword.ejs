<div class="max-w-md mx-auto bg-white p-6 mt-8 rounded shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Forgot Password</h2>
    <form action="/forgot-password" method="POST" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">User ID</label>
        <input type="text" name="userId" required class="w-full border px-3 py-2" placeholder="Enter your User ID" />
      </div>
      <button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700">Send OTP</button>
    </form>
  </div>
  