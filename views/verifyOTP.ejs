<div class="max-w-md mx-auto bg-white p-6 mt-8 rounded shadow-md">
    <h2 class="text-2xl font-semibold mb-4">Verify OTP</h2>
    <form action="/verify-otp" method="POST" class="space-y-4">
      <div>
        <label class="block font-medium mb-1">Enter OTP</label>
        <input type="text" name="otp" required class="w-full border px-3 py-2" placeholder="Enter OTP sent to your email" />
      </div>
      <button type="submit" class="w-full bg-green-600 text-white py-2 rounded hover:bg-green-700">Verify OTP</button>
    </form>
  </div>
  