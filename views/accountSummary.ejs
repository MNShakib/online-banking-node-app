<!-- views/accountSummary.ejs -->
<div class="container mx-auto mt-8">
    <h2 class="text-2xl font-semibold mb-4">Account Summary</h2>
    <div class="bg-white shadow rounded p-4 mb-6">
      <p><span class="font-semibold">Account Number:</span> <%= user.accountNumber %></p>
      <p><span class="font-semibold">Current Balance:</span> ₹<%= user.balance.toFixed(2) %></p>
    </div>
    <div class="bg-white shadow rounded p-4">
      <h3 class="text-xl font-semibold mb-3">Recent Transactions</h3>
      <% if (recentTxns && recentTxns.length > 0) { %>
        <table class="min-w-full bg-white">
          <thead>
            <tr class="bg-gray-200">
              <th class="px-4 py-2 text-left">Date</th>
              <th class="px-4 py-2 text-left">Description</th>
              <th class="px-4 py-2 text-right">Amount (₹)</th>
              <th class="px-4 py-2 text-left">Mode</th>
            </tr>
          </thead>
          <tbody>
            <% recentTxns.forEach(txn => { %>
              <tr class="border-b">
                <td class="px-4 py-2"><%= new Date(txn.date).toLocaleDateString() %></td>
                <td class="px-4 py-2">Transfer to <%= txn.toAccount %></td>
                <td class="px-4 py-2 text-right"><%= txn.amount.toFixed(2) %></td>
                <td class="px-4 py-2"><%= txn.mode %></td>
              </tr>
            <% }) %>
          </tbody>
        </table>
      <% } else { %>
        <p class="text-gray-600">No recent transactions to display.</p>
      <% } %>
    </div>
  </div>
  